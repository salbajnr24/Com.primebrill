modules = ["nodejs-20", "web"]
run = "node index.js"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "node index.js"]

[env]
PORT = "5000"

[workflows]
runButton = "Start application"

[[workflows.workflow]]
name = "Start application"
author = 46942602
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install --force"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web && npm install --force"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd mobile && npm install --force"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd shared && npm install --force"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "turbo dev"

[[workflows.workflow]]
name = "Test Firebase"
author = 46945737
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web && npm run dev &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd mobile && npm start &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Development servers started. Check the web browser and mobile app for Firebase test results.\""

[[ports]]
localPort = 5000
externalPort = 80

[agent]
integrations = ["firebase_barebones_javascript==1.0.0"]
