{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2020"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./*"],
      "@firebase/*": ["../firebase/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../firebase/**/*"
  ]
}